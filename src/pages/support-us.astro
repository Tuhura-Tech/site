---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { SITE } from '~/config.mjs';

import Layout from '~/layouts/PageLayout.astro';

import { getCanonical, getPermalink } from '~/utils/permalinks';

const meta = {
  title: `Support Us`,
  description: SITE.description,
  canonical: getCanonical(getPermalink('what-we-do')),
};
---

<Layout {meta}>
  <Features2
    title="Sponsorship"
    subtitle="Your funding is what enables us to continue offering sessions at no cost and building our resources."
    cols="2"
    items={[
      {
        title: 'Diamond Sponsorship - $200,000',
        description: 'Sponsor a region with sessions and resources.',
      },
      {
        title: 'Gold Sponsorship - $100,000',
        description: 'Help run a region with sessions and resources.'
      },
      {title: 'Silver Sponsorship - $50,000', description: 'Sponsor a staff member to run sessions and create new public resources.'},
      {title: 'Bronze Sponsorship - $25,000', description: 'Sponsor a staff member to run 5x sessions a week for a year.'},
      { title: 'Sponsor a Session for a year - $5000', description: 'Sponsor the equipment and staff costs for a session fro a year.' },
    ]}
  />

  <CallToAction
    title="Donate Equipment"
    ,
    subtitle="Old laptops, servers, electronics, anything can be used to help run sessions and support the kids. If you have any old, spare or unnused tech we would love to have it and will find a great us for it."
    ,
    callToAction={{ text: 'Contact Us', href: '/contact-us' }}
  />

  <CallToAction
    title="Volunteer with us"
    ,
    subtitle="Come join our volunteering team and help support students in your region. Any experience is appreciate with either helping teaching, buildiung resources or helping maintain our infrastructure. Send us an email if you are keen to help volunteer."
    ,
    callToAction={{ text: 'Contact Us', href: '/contact-us' }}
  />
</Layout>
