---
import Newsletter from "@components/Newsletter.astro";
import Partners from "@components/Partners.astro";
import CallToAction from "@components/ui/CallToAction.astro";
import Card from "@components/ui/Card.astro";
import Checklist from "@components/ui/Checklist.astro";
import ProgramCards from "@components/ui/ProgramCards.astro";
import StatsSection from "@components/ui/StatsSection.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const supportTypes = [
	{
		name: "Kōha (Donations)",
		description:
			"Your financial kōha enables us to continue running sessions free of charge for all rangatahi. Every dollar directly supports removing barriers to technology education.",
		features: [
			"$20 funds one rangatahi for a 2-hour session",
			"$800 supports one rangatahi for a full year",
			"$10,000 funds an entire session location for a year",
			"One-off or recurring monthly donations",
			"Tax-deductible charitable giving receipts",
		],
		icon: "heroicons:heart",
		cta: {
			type: "button",
			text: "Make a Kōha",
			onclick: "demo.showModal()",
		},
	},
	{
		name: "Volunteer Your Time & Expertise",
		description:
			"Share your mātauranga (knowledge) with rangatahi! Support our trained kaiako by bringing your industry experience and passion to sessions.",
		features: [
			"Support sessions weekly or as one-off opportunities",
			"Bring real-world tech experience to rangatahi",
			"Help build resources and train our staff",
			"Police vetting check required (we can help with this)",
			"Flexible commitment - work around your schedule",
		],
		icon: "heroicons:users",
		cta: {
			type: "link",
			text: "Volunteer With Us",
			href: "/contact",
		},
	},
	{
		name: "Equipment & Technology Donations",
		description:
			"We run entirely on donated equipment! Many whānau don't have laptops, so we provide everything needed for learning.",
		features: [
			"Donated laptops enable us to run more sessions",
			"Electronics components for hands-on exploration",
			"Robotics kits, 3D printers, and maker equipment",
			"Even older devices can be valuable for specific activities",
			"Software licenses and development tools",
		],
		icon: "heroicons:computer-desktop",
		cta: {
			type: "link",
			text: "Donate Equipment",
			href: "/contact",
		},
	},
];
const impactStats = [
	{ number: "1000+", label: "Rangatahi reached annually" },
	{ number: "15+", label: "Community locations" },
	{ number: "100%", label: "Sessions free of charge" },
	{ number: "50+", label: "Volunteers and kaiako" },
];

const donationImpact = [
	{
		amount: "$20",
		impact: "Funds one rangatahi for a 2-hour session",
		description: "Covers materials, equipment use, and educator support",
	},
	{
		amount: "$800",
		impact: "Supports one rangatahi for a full year",
		description: "40 sessions of hands-on technology exploration",
	},
	{
		amount: "$10,000",
		impact: "Funds an entire session location for a year",
		description: "Bringing tech education to a whole community",
	},
];
---

<Layout
  title="Support Us | Tautoko"
  description="Support Tūhura Tech and help grow our impact providing free technology education for rangatahi across Aotearoa."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
          <span class="gradient-text">Tautoko (Support Us)</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed">
          Join our mission to empower the next generation of rangatahi through technology. 
          Every contribution, whether time, resources, or kōha, makes a meaningful difference 
          in breaking down barriers to technology education.
        </p>
      </div>
      
      <StatsSection 
        title="Our Impact Together"
        stats={impactStats.map(stat => ({
          title: stat.label,
          value: stat.number,
          description: stat.label
        }))}
        bgColor="bg-tuhura-gray"
      />
    </div>
  </section>

 

<!-- Donation Impact -->
  <section class="py-10 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Your Kōha Creates Real Impact</h2>
        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed">
          We offer everything for free to ensure no barriers, but it does cost us to run. 
          See exactly how your donation supports rangatahi.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-16">
        {donationImpact.map((item, index) => (
          <div class="text-center bg-tuhura-gray rounded-2xl p-8" style={`animation-delay: ${index * 0.1}s`}>
            <div class="text-5xl font-bold text-tuhura-green mb-4">{item.amount}</div>
            <h3 class="text-xl font-semibold mb-4 text-gray-900">{item.impact}</h3>
            <p class="text-gray-600 leading-relaxed">{item.description}</p>
          </div>
        ))}
      </div>

      <div class="text-center">
        <a href="https://donate.tuhuratech.org.nz" class="btn btn-primary btn-lg">
          Make a Donation Today
        </a>
        <p class="mt-4 text-gray-600 text-lg">All donations are tax-deductible</p>
      </div>
    </div>
  </section>
 <Partners />
  <section class="py-20 bg-gray-50">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ways to Tautoko (Support)</h2>
        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed">
          Choose the way that works best for you to help create opportunities for rangatahi.
        </p>
      </div>

      <ProgramCards 
        programs={supportTypes.map(type => ({
          title: type.name,
          description: type.description,
          icon: type.icon,
          features: type.features,
          ...(type.cta.type === "link" && { href: type.cta.href })
        }))}
        columns="3"
      />
    </div>
  </section>

  <!-- Detailed Volunteer Information -->
  <section class="py-20 bg-tuhura-gray">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold">Volunteer with Us</h2>
        <p class="mt-4 text-xl text-gray-600">
          Your time and expertise make an incredible difference to rangatahi exploring technology.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        <div class="bg-white rounded-xl p-8 shadow-sm">
          <h3 class="text-2xl font-bold text-tuhura-green mb-4">What Volunteers Do</h3>
          <Checklist 
            items={[
              { text: "Support Sessions: Work alongside our trained kaiako to share your industry experience with rangatahi" },
              { text: "Resource Development: Help create learning materials and train our staff in new technologies" },
              { text: "Real-World Perspective: Give rangatahi options and opportunities by sharing your career journey" }
            ]}
            icon="heroicons:check-circle"
            iconColor="text-tuhura-green"
          />
        </div>

        <div class="bg-white rounded-xl p-8 shadow-sm">
          <h3 class="text-2xl font-bold text-tuhura-green mb-4">Getting Started</h3>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-8 h-8 bg-tuhura-green text-white rounded-full flex items-center justify-center mr-4 text-sm font-bold">1</div>
              <div>
                <p class="font-medium">Contact Us</p>
                <p class="text-gray-600 text-sm">Reach out to discuss your interests and availability</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-tuhura-green text-white rounded-full flex items-center justify-center mr-4 text-sm font-bold">2</div>
              <div>
                <p class="font-medium">Police Vetting</p>
                <p class="text-gray-600 text-sm">Complete a police vetting check (we'll help you with this process)</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-tuhura-green text-white rounded-full flex items-center justify-center mr-4 text-sm font-bold">3</div>
              <div>
                <p class="font-medium">Start Supporting</p>
                <p class="text-gray-600 text-sm">Join sessions and start making a difference in rangatahi lives</p>
              </div>
            </div>
          </div>
          <div class="mt-8 p-4 bg-tuhura-gray rounded-lg">
            <p class="text-sm text-gray-700">
              <strong>Important:</strong> Our trained kaiako run all sessions - volunteers support and enhance the experience 
              by bringing real-world industry knowledge and additional mentoring opportunities.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>  

  <!-- Equipment Donations -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold">Equipment Donations</h2>
        <p class="mt-4 text-xl text-gray-600">
          We run entirely on donated equipment! Many whānau don't have laptops, 
          so we provide everything needed for learning.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <Card class="bg-gray-50 p-6">
          <Icon name="heroicons:computer-desktop" class="h-12 w-12 text-tuhura-green mb-4" />
          <h3 class="text-xl font-bold mb-3">Laptops & Hardware</h3>
          <p class="text-gray-700 mb-4">
            Donated laptops directly enable us to run more sessions and support more rangatahi. 
            Without them, we simply can't operate.
          </p>
          <ul class="text-sm text-gray-600 space-y-2">
            <li>• Laptops suitable for programming (minimum 8GB RAM preferred)</li>
            <li>• Tablets for younger rangatahi learning activities</li>
            <li>• Monitors, keyboards, and peripherals</li>
          </ul>
        </Card>

        <Card class="bg-gray-50 p-6">
          <Icon name="heroicons:cpu-chip" class="h-12 w-12 text-tuhura-green mb-4" />
          <h3 class="text-xl font-bold mb-3">Electronics & Components</h3>
          <p class="text-gray-700 mb-4">
            Electronics give us amazing things to explore with rangatahi, 
            encouraging curiosity and learning.
          </p>
          <ul class="text-sm text-gray-600 space-y-2">
            <li>• Arduino kits, Raspberry Pi computers</li>
            <li>• Robotics components and sensors</li>
            <li>• 3D printers and maker equipment</li>
          </ul>
        </Card>
      </div>

      <div class="mt-8 text-center">
        <a href="/contact" class="btn btn-secondary">
          Donate Equipment
        </a>
      </div>
    </div>
  </section>

  <!-- Partnership Section -->
  <section class="py-10 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold">Strategic Partnerships</h2>
        <p class="mt-4 text-xl text-gray-600">
          Partner with us to collaboratively solve technology education challenges. 
          We're already part of the Wellington Regional Economic Development Plan.
        </p>
      </div>

      <!-- Enterprise Partnership CTA -->
      <CallToAction 
        title="Become a Strategic Partner"
        description="Partnership isn't just financial - it's our two organisations collaborating to solve technology education challenges in the Wellington region and beyond."
        badge="We're recognized in the Wellington Regional Economic Development Plan as the solution to technology education and growing the region's tech workforce."
        buttons={[
          { text: "Discuss Partnership", href: "/contact", variant: "primary" },
          { text: "Download Prospectus", href: "#", variant: "outline" }
        ]}
        bgColor="bg-tuhura-green"
        textColor="text-white"
      />
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Frequently Asked Questions
        </h2>
        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed">
          Have questions about supporting us? Here are some common questions from our community.
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-6">
        <Card class="bg-gray-50 p-8">
          <h3 class="text-xl font-semibold mb-4 text-gray-900">How are donations used?</h3>
          <p class="text-gray-700 leading-relaxed text-lg">
            Every kōha goes directly towards keeping our sessions free for rangatahi. We provide quarterly impact reports to all donors.
          </p>
        </Card>
        
        <Card class="bg-gray-50 p-8">
          <h3 class="text-xl font-semibold mb-4 text-gray-900">What's required to volunteer?</h3>
          <p class="text-gray-700 leading-relaxed text-lg">
            Police vetting check required (we help with this process). You don't need teaching experience - our trained kaiako run the sessions, and you support by sharing your industry knowledge.
          </p>
        </Card>
        
        <Card class="bg-gray-50 p-8">
          <h3 class="text-xl font-semibold mb-4 text-gray-900">What equipment do you need most?</h3>
          <p class="text-gray-700 leading-relaxed text-lg">
            Laptops are our biggest need - many whānau don't have them. We also value electronics components like Arduino kits and sensors that give us amazing things to explore with rangatahi.
          </p>
        </Card>
        
        <Card class="bg-gray-50 p-8">
          <h3 class="text-xl font-semibold mb-4 text-gray-900">How does partnership work?</h3>
          <p class="text-gray-700 leading-relaxed text-lg">
            Partnership isn't just financial - it's about collaboration to solve technology education challenges. We're recognized in the Wellington Regional Economic Development Plan as the solution to growing the region's tech workforce.
          </p>
        </Card>
      </div>

      <div class="text-center mt-16">
        <a href="/contact" class="btn btn-secondary btn-lg">Get in Touch</a>
      </div>
    </div>
  </section>
  <Newsletter />
</Layout>
