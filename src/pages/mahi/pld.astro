---
import { Image } from "astro:assets";
import pldImage from "@assets/pld.jpg";
import StepsSection from "@components/ui/StepsSection.astro";
import Layout from "@layouts/Layout.astro";

const learningFramework = [
	{
		title: "Curriculum Support",
		description:
			"Resources and guidance aligned with NZ Digital Technologies curriculum requirements.",
	},
	{
		title: "Workshop Delivery",
		description:
			"Specialist workshops delivered in schools to support kaiako and enhance student learning.",
	},
	{
		title: "Resource Sharing",
		description:
			"Access to our educational resources, lesson plans, and project guides.",
	},
	{
		title: "Ongoing Partnership",
		description:
			"Collaborative relationships with schools to support technology education goals.",
	},
];
---

<Layout
  title="Kura & Kaiako Support | Ako Ngaiotanga"
  description="Supporting schools and teachers with technology education resources, workshops, and curriculum-aligned guidance for enhanced learning outcomes."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="mb-16 grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <div>
          <h1 class="mb-6 text-4xl leading-tight font-bold md:text-5xl">
            Kura & Kaiako Support
          </h1>
          <p class="mb-6 text-xl text-gray-700">
            Supporting schools and teachers with resources, workshops, and
            guidance to enhance technology education for akonga.
          </p>
          <p class="text-lg text-gray-600">
            We work directly with kura and kaiako to provide curriculum-aligned
            support, resources, and specialist workshops that complement our
            student sessions.
          </p>
        </div>
        <div>
          <div class="relative">
            <div
              class="absolute -inset-0.5 rounded-xl bg-tuhura-green opacity-30 blur"
            >
            </div>
            <div class="relative overflow-hidden rounded-xl bg-white shadow-xl">
              <Image
                src={pldImage}
                alt="TÅ«hura Tech Product Dashboard"
                class="h-auto w-full"
                width={700}
                height={500}
              />
            </div>
          </div>
        </div>
      </div>

      <StepsSection
        steps={learningFramework}
        title="How We Support Kura & Kaiako"
        columns="4"
      />

      <div class="mb-12 rounded-xl bg-tuhura-gray p-8">
        <h2 class="mb-6 text-3xl font-bold">Support & Resources Available</h2>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
          <div>
            <h3 class="mb-4 text-2xl font-semibold">For Kaiako (Teachers)</h3>
            <ul class="list-disc space-y-3 pl-6 text-lg">
              <li>
                <strong>Curriculum Alignment:</strong> Resources aligned with NZ
                Digital Technologies curriculum
              </li>
              <li>
                <strong>In-School Workshops:</strong> Specialist sessions delivered
                in your school
              </li>
              <li>
                <strong>Resource Access:</strong> Educational materials, lesson plans,
                and project guides
              </li>
              <li>
                <strong>Partnership Support:</strong> Ongoing collaboration to enhance
                tech education
              </li>
            </ul>
          </div>
          <div>
            <h3 class="mb-4 text-2xl font-semibold">For Kura (Schools)</h3>
            <ul class="list-disc space-y-3 pl-6 text-lg">
              <li>
                <strong>After-School Programs:</strong> Regular sessions hosted at
                your school
              </li>
              <li>
                <strong>Curriculum Support:</strong> Assistance with Digital Technologies
                implementation
              </li>
              <li>
                <strong>Industry Connections:</strong> Links to technology professionals
                and opportunities
              </li>
              <li>
                <strong>Equipment & Resources:</strong> Access to technology tools
                and educational materials
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-white py-16">
    <div class="container-custom mx-auto max-w-2xl text-center">
      <h2 class="mb-4 text-2xl font-bold md:text-3xl">Work with Us</h2>
      <p class="mb-4 text-lg text-gray-700">
        Interested in working with us to grow your impact on akonga? We would
        love to support your kura or kaiako with PLD, resources, and workshops.
      </p>
      <p class="mb-6 text-lg text-gray-700">
        To work with us, simply{" "}
        <a href="/contact" class="font-medium text-tuhura-green underline">
          contact us
        </a>
      </p>
      <a
        href="/contact"
        class="inline-block rounded-lg bg-tuhura-green px-6 py-3 font-semibold text-white shadow transition hover:bg-tuhura-blue"
      >
        Contact Us
      </a>
    </div>
  </section>
</Layout>
