---
import { Image } from "astro:assets";
import pldImage from "@assets/pld.jpg";
import robocupImage from "@assets/robocup-2025.jpg";
// Import images
import sessionImage from "@assets/session.jpg";
import session1Image from "@assets/session-1.jpg";
import teamPhotoImage from "@assets/team-photo.jpg";
import Card from "@components/ui/Card.astro";

import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const workshopFormats = [
	{
		title: "During-School Workshops",
		description: "Tailored sessions that fit within school timetables",
		duration: "1-4 hours",
		icon: "heroicons:academic-cap",
		examples: [
			"Digital technologies curriculum support",
			"Specific skill workshops for classes",
			"Assessment preparation sessions",
			"Take-home portfolio projects",
		],
	},
	{
		title: "Community Event Workshops",
		description: "Special workshops as part of community events and gatherings",
		duration: "1-3 hours",
		icon: "heroicons:user-group",
		examples: [
			"Technology demonstrations",
			"Hands-on maker activities",
			"Coding taster sessions",
			"Tech career showcases",
		],
	},
];

const workshopTopics = [
	{
		category: "Creative Technology",
		topics: [
			"Game Development with Godot",
			"Music Production & Sound Design",
			"3D Modeling & Printing",
		],
	},
	{
		category: "Programming & Development",
		topics: [
			"Web Development (HTML/CSS/JavaScript)",
			"Python Programming",
			"App Development",
			"Database Design",
			"API Development",
		],
	},
	{
		category: "Hardware & Electronics",
		topics: [
			"Arduino Projects",
			"Raspberry Pi Computing",
			"Robotics Building & Programming",
			"IoT (Internet of Things)",
			"Circuit Design",
		],
	},
	{
		category: "Emerging Technologies",
		topics: [
			"Artificial Intelligence Basics",
			"Machine Learning Projects",
			"Cybersecurity & Ethical Hacking",
			"Virtual & Augmented Reality",
		],
	},
];
---

<Layout title="Workshops | Wānanga" description="Intensive technology learning workshops for rangatahi - during-school curriculum support, and community events">
  <!-- Visual Hero Section -->
  <section class="pt-20 pb-16 md:pt-28 md:pb-24 bg-gradient-to-br from-tuhura-green/5 to-tuhura-blue/5">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
        <div class="text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl font-bold leading-tight">
            Workshops <span class="text-tuhura-green">(Wānanga)</span>
          </h1>
          <p class="mt-6 text-xl text-gray-600">
            Intensive learning experiences diving deep into specific technology topics. Perfect for skill-building during school holidays or special events.
          </p>
          <div class="mt-8 bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <p class="text-lg text-gray-700">
              <strong>Complement regular sessions</strong> with focused, hands-on workshops lasting hours or days.
            </p>
          </div>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <a href="#workshop-types" class="btn btn-primary">
              Explore Workshop Types
            </a>
            <a href="/contact" class="btn btn-secondary">
              Book a Workshop
            </a>
          </div>
        </div>
        
        <div class="relative">
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <div class="relative group overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={pldImage}
                  alt="Professional development workshop for educators"
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  width={280}
                  height={192}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
                  <div class="absolute bottom-3 left-3 right-3">
                    <p class="text-white text-sm font-medium">Teacher PLD</p>
                  </div>
                </div>
              </div>
              <div class="relative group overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={sessionImage}
                  alt="Hands-on technology workshop"
                  class="w-full h-32 object-cover group-hover:scale-105 transition-transform duration-300"
                  width={280}
                  height={128}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
                  <div class="absolute bottom-2 left-3 right-3">
                    <p class="text-white text-xs font-medium">Hands-on Learning</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="space-y-4 pt-8">
              <div class="relative group overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={robocupImage}
                  alt="Robotics workshop preparation"
                  class="w-full h-32 object-cover group-hover:scale-105 transition-transform duration-300"
                  width={280}
                  height={128}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
                  <div class="absolute bottom-2 left-3 right-3">
                    <p class="text-white text-xs font-medium">Robotics</p>
                  </div>
                </div>
              </div>
              <div class="relative group overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={session1Image}
                  alt="Collaborative workshop environment"
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  width={280}
                  height={192}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
                  <div class="absolute bottom-3 left-3 right-3">
                    <p class="text-white text-sm font-medium">Group Projects</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container-custom">
      <!-- Workshop Formats -->
      <div class="max-w-6xl mx-auto mb-20" id="workshop-types">
        <h2 class="text-3xl font-bold text-center mb-12">Workshop Types</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {workshopFormats.map((format, index) => (
            <Card variant="hover" padding="lg" style={`animation-delay: ${index * 0.1}s`}>
              <div class="flex items-center mb-6">
                <div class="w-16 h-16 bg-tuhura-green/10 rounded-full flex items-center justify-center mr-4">
                  <Icon name={format.icon} class="h-8 w-8 text-tuhura-green" />
                </div>
                <div>
                  <h3 class="text-2xl font-bold">{format.title}</h3>
                  <p class="text-tuhura-green font-medium">{format.duration}</p>
                </div>
              </div>
              <p class="text-gray-700 mb-6">{format.description}</p>
              <div>
                <h4 class="font-semibold text-gray-900 mb-3">What's included:</h4>
                <ul class="space-y-2">
                  {format.examples.map((example) => (
                    <li class="flex items-start text-gray-600">
                      <Icon name="heroicons:sparkles" class="h-4 w-4 text-tuhura-green mr-2 mt-0.5 flex-shrink-0" />
                      {example}
                    </li>
                  ))}
                </ul>
              </div>
            </Card>
          ))}
        </div>
