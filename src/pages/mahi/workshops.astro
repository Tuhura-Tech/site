---
import { Image } from "astro:assets";
import pldImage from "@assets/pld.jpg";
import robocupImage from "@assets/robocup-2025.jpg";
// Import images
import sessionImage from "@assets/session.jpg";
import session1Image from "@assets/session-1.jpg";
import teamPhotoImage from "@assets/team-photo.jpg";
import Card from "@components/ui/Card.astro";

import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const workshopFormats = [
  {
    title: "School-Time Workshops",
    description:
      "Specialist workshops delivered in schools during school hours for participating akonga",
    duration: "1-4 hours",
    icon: "heroicons:academic-cap",
    examples: [
      "Digital technologies curriculum support",
      "Competition preparation (RoboCup, CTF)",
      "Specialist skill development sessions",
      "Project showcase preparation",
    ],
  },
  {
    title: "Intensive Session Workshops",
    description:
      "Deep-dive workshops for rangatahi already participating in our regular sessions",
    duration: "Half day to multi-day",
    icon: "heroicons:user-group",
    examples: [
      "Holiday intensive workshops",
      "Competition training camps",
      "Specialist technology deep-dives",
      "Collaborative project workshops",
    ],
  },
];

const workshopTopics = [
  {
    category: "Creative Technology",
    topics: [
      "Game Development with Godot",
      "Music Production & Sound Design",
      "3D Modeling & Printing",
    ],
  },
  {
    category: "Programming & Development",
    topics: [
      "Web Development (HTML/CSS/JavaScript)",
      "Python Programming",
      "App Development",
      "Database Design",
      "API Development",
    ],
  },
  {
    category: "Hardware & Electronics",
    topics: [
      "Arduino Projects",
      "Raspberry Pi Computing",
      "Robotics Building & Programming",
      "IoT (Internet of Things)",
      "Circuit Design",
    ],
  },
  {
    category: "Emerging Technologies",
    topics: [
      "Artificial Intelligence Basics",
      "Machine Learning Projects",
      "Cybersecurity & Ethical Hacking",
      "Virtual & Augmented Reality",
    ],
  },
];
---

<Layout
  title="Workshops | Wānanga"
  description="Specialist workshops for rangatahi participating in our sessions - intensive skill-building and collaborative learning experiences"
>
  <!-- Visual Hero Section -->
  <section
    class="bg-gradient-to-br from-tuhura-green/5 to-tuhura-blue/5 pt-20 pb-16 md:pt-28 md:pb-24"
  >
    <div class="container-custom">
      <div
        class="mx-auto grid max-w-6xl grid-cols-1 items-center gap-12 lg:grid-cols-2"
      >
        <div class="text-center lg:text-left">
          <h1 class="text-4xl leading-tight font-bold md:text-5xl">
            Workshops <span class="text-tuhura-green">(Wānanga)</span>
          </h1>
          <p class="mt-6 text-xl text-gray-600">
            Specialist workshops for rangatahi participating in our sessions -
            diving deep into specific technology topics through intensive,
            hands-on learning.
          </p>
          <div
            class="mt-8 rounded-xl border border-gray-100 bg-white p-6 shadow-sm"
          >
            <p class="text-lg text-gray-700">
              <strong>For current participants:</strong> Workshops complement our
              regular after-school sessions with focused, intensive learning experiences.
            </p>
          </div>
          <div class="mt-8 flex flex-col gap-4 sm:flex-row">
            <a href="/mahi/sessions" class="btn btn-primary">
              Join Our Sessions First
            </a>
            <a href="/contact" class="btn btn-secondary"> Contact Us </a>
          </div>
        </div>

        <div class="relative">
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <div class="group relative overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={pldImage}
                  alt="Professional development workshop for educators"
                  class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  width={280}
                  height={192}
                />
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
                >
                  <div class="absolute right-3 bottom-3 left-3">
                    <p class="text-sm font-medium text-white">Teacher PLD</p>
                  </div>
                </div>
              </div>
              <div class="group relative overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={sessionImage}
                  alt="Hands-on technology workshop"
                  class="h-32 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  width={280}
                  height={128}
                />
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
                >
                  <div class="absolute right-3 bottom-2 left-3">
                    <p class="text-xs font-medium text-white">
                      Hands-on Learning
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="space-y-4 pt-8">
              <div class="group relative overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={robocupImage}
                  alt="Robotics workshop preparation"
                  class="h-32 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  width={280}
                  height={128}
                />
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
                >
                  <div class="absolute right-3 bottom-2 left-3">
                    <p class="text-xs font-medium text-white">Robotics</p>
                  </div>
                </div>
              </div>
              <div class="group relative overflow-hidden rounded-xl shadow-lg">
                <Image
                  src={session1Image}
                  alt="Collaborative workshop environment"
                  class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  width={280}
                  height={192}
                />
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
                >
                  <div class="absolute right-3 bottom-3 left-3">
                    <p class="text-sm font-medium text-white">Group Projects</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container-custom">
      <!-- Workshop Formats -->
      <div class="mx-auto mb-20 max-w-6xl" id="workshop-types">
        <h2 class="mb-12 text-center text-3xl font-bold">Workshop Types</h2>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
          {
            workshopFormats.map((format, index) => (
              <Card
                variant="hover"
                padding="lg"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <div class="mb-6 flex items-center">
                  <div class="mr-4 flex h-16 w-16 items-center justify-center rounded-full bg-tuhura-green/10">
                    <Icon
                      name={format.icon}
                      class="h-8 w-8 text-tuhura-green"
                    />
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold">{format.title}</h3>
                    <p class="font-medium text-tuhura-green">
                      {format.duration}
                    </p>
                  </div>
                </div>
                <p class="mb-6 text-gray-700">{format.description}</p>
                <div>
                  <h4 class="mb-3 font-semibold text-gray-900">
                    What's included:
                  </h4>
                  <ul class="space-y-2">
                    {format.examples.map((example) => (
                      <li class="flex items-start text-gray-600">
                        <Icon
                          name="heroicons:sparkles"
                          class="mt-0.5 mr-2 h-4 w-4 flex-shrink-0 text-tuhura-green"
                        />
                        {example}
                      </li>
                    ))}
                  </ul>
                </div>
              </Card>
            ))
          }
        </div>
      </div>

