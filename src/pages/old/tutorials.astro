---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Tutorials | Tūhura Tech">
	<main>
		<!-- Hero Section -->
		<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden">
			<div class="container-custom">
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
				>
					<div>
						<h1
							class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight"
						>
							Learn with <span class="gradient-text"
								>Tūhura Tech</span
							>
						</h1>
						<p class="mt-6 text-xl text-gray-600 max-w-lg">
							Step-by-step guides to help you get the most out of
							our payroll infrastructure, APIs, and UI components.
						</p>
						<div class="mt-8">
							<a href="#popular-tutorials" class="btn btn-primary"
								>View Tutorials</a
							>
						</div>
					</div>
					<div class="">
						<div class="relative">
							<div
								class="absolute -inset-0.5 bg-gradient-to-r from-tuhura-green to-tuhura-blue rounded-xl blur opacity-30"
							>
							</div>
							<div
								class="relative bg-white rounded-xl shadow-xl overflow-hidden p-8"
							>
								<div class="space-y-6">
									<div class="flex items-center gap-4">
										<div
											class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
										>
											<svg
												class="w-6 h-6 text-tuhura-green"
												viewBox="0 0 24 24"
												fill="none"
												xmlns="http://www.w3.org/2000/svg"
											>
												<path
													d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
													stroke="currentColor"
													stroke-width="2"
													stroke-linecap="round"
													stroke-linejoin="round"
												></path>
											</svg>
										</div>
										<div>
											<h3
												class="font-semibold text-gray-900"
											>
												Documentation
											</h3>
											<p class="text-gray-600">
												Comprehensive guides
											</p>
										</div>
									</div>
									<div class="flex items-center gap-4">
										<div
											class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
										>
											<svg
												class="w-6 h-6 text-tuhura-blue"
												viewBox="0 0 24 24"
												fill="none"
												xmlns="http://www.w3.org/2000/svg"
											>
												<path
													d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
													stroke="currentColor"
													stroke-width="2"
													stroke-linecap="round"
													stroke-linejoin="round"
												></path>
											</svg>
										</div>
										<div>
											<h3
												class="font-semibold text-gray-900"
											>
												API Reference
											</h3>
											<p class="text-gray-600">
												Detailed API docs
											</p>
										</div>
									</div>
									<div class="flex items-center gap-4">
										<div
											class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
										>
											<svg
												class="w-6 h-6 text-tuhura-green"
												viewBox="0 0 24 24"
												fill="none"
												xmlns="http://www.w3.org/2000/svg"
											>
												<path
													d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"
													stroke="currentColor"
													stroke-width="2"
													stroke-linecap="round"
													stroke-linejoin="round"
												></path>
											</svg>
										</div>
										<div>
											<h3
												class="font-semibold text-gray-900"
											>
												Quick Start
											</h3>
											<p class="text-gray-600">
												Get up and running
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Getting Started Section -->
		<section class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Getting <span class="gradient-text">Started</span>
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="feature-card">
						<div
							class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5"
						>
							<svg
								class="w-6 h-6 text-tuhura-green"
								viewBox="0 0 24 24"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M13 10V3L4 14h7v7l9-11h-7z"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">
							Quick Start Guide
						</h3>
						<p class="text-gray-600">
							Get up and running with Tūhura Tech in under 15
							minutes.
						</p>
						<a
							href="/tutorials/quickstart"
							class="mt-4 inline-block text-tuhura-green hover:text-tuhura-blue"
						>
							Learn more →
						</a>
					</div>

					<div class="feature-card">
						<div
							class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-5"
						>
							<svg
								class="w-6 h-6 text-tuhura-blue"
								viewBox="0 0 24 24"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
								<path
									d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">
							Initial Setup
						</h3>
						<p class="text-gray-600">
							Configure your organization settings and
							preferences.
						</p>
						<a
							href="/tutorials/setup"
							class="mt-4 inline-block text-tuhura-green hover:text-tuhura-blue"
						>
							Learn more →
						</a>
					</div>

					<div class="feature-card">
						<div
							class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5"
						>
							<svg
								class="w-6 h-6 text-tuhura-green"
								viewBox="0 0 24 24"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">
							API Integration
						</h3>
						<p class="text-gray-600">
							Learn how to integrate our API into your systems.
						</p>
						<a
							href="/tutorials/api-integration"
							class="mt-4 inline-block text-tuhura-green hover:text-tuhura-blue"
						>
							Learn more →
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Popular Tutorials -->
		<section id="popular-tutorials" class="section">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Popular <span class="gradient-text">Tutorials</span>
				</h2>
				<div class="space-y-6">
					<div class="feature-card">
						<div class="flex items-start gap-6">
							<div
								class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0"
							>
								<svg
									class="w-6 h-6 text-tuhura-green"
									viewBox="0 0 24 24"
									fill="none"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold mb-2">
									Running Your First Payroll
								</h3>
								<p class="text-gray-600 text-lg mb-4">
									Learn how to process your first payroll run
									with our step-by-step guide.
								</p>
								<a
									href="/tutorials/run-first-payroll"
									class="text-tuhura-green hover:text-tuhura-blue"
									>Read tutorial →</a
								>
							</div>
						</div>
					</div>

					<div class="feature-card">
						<div class="flex items-start gap-6">
							<div
								class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0"
							>
								<svg
									class="w-6 h-6 text-tuhura-blue"
									viewBox="0 0 24 24"
									fill="none"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold mb-2">
									Employee Onboarding
								</h3>
								<p class="text-gray-600 text-lg mb-4">
									Streamline your employee onboarding process
									with our comprehensive guide.
								</p>
								<a
									href="/tutorials/employee-onboarding"
									class="text-tuhura-green hover:text-tuhura-blue"
									>Read tutorial →</a
								>
							</div>
						</div>
					</div>

					<div class="feature-card">
						<div class="flex items-start gap-6">
							<div
								class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0"
							>
								<svg
									class="w-6 h-6 text-tuhura-green"
									viewBox="0 0 24 24"
									fill="none"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-xl font-semibold mb-2">
									Tax Configuration
								</h3>
								<p class="text-gray-600 text-lg mb-4">
									Set up your tax settings correctly to ensure
									compliance and accuracy.
								</p>
								<a
									href="/tutorials/tax-setup"
									class="text-tuhura-green hover:text-tuhura-blue"
									>Read tutorial →</a
								>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Categories -->
		<section class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Browse by <span class="gradient-text">Category</span>
				</h2>
				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
				>
					<a
						href="/tutorials/payroll"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">
							Payroll Processing
						</h3>
						<p class="text-gray-600">
							Learn about running payroll, adjustments, and
							special payments.
						</p>
					</a>

					<a
						href="/tutorials/compliance"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">Compliance</h3>
						<p class="text-gray-600">
							Stay compliant with tax laws and regulations.
						</p>
					</a>

					<a
						href="/tutorials/reporting"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">Reporting</h3>
						<p class="text-gray-600">
							Generate and customize various payroll reports.
						</p>
					</a>

					<a
						href="/tutorials/benefits"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">
							Benefits Management
						</h3>
						<p class="text-gray-600">
							Set up and manage employee benefits.
						</p>
					</a>

					<a
						href="/tutorials/integrations"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">Integrations</h3>
						<p class="text-gray-600">
							Connect with your favorite HR and accounting tools.
						</p>
					</a>

					<a
						href="/tutorials/security"
						class="feature-card hover:shadow-xl transition-shadow"
					>
						<h3 class="text-lg font-semibold mb-2">Security</h3>
						<p class="text-gray-600">
							Learn about security features and best practices.
						</p>
					</a>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section
			class="section bg-gradient-to-r from-tuhura-green to-tuhura-blue"
		>
			<div class="container-custom text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
					Need Help?
				</h2>
				<p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
					Can't find what you're looking for? Our support team is here
					to help you get the most out of Tūhura Tech.
				</p>
				<a
					href="/contact"
					class="btn bg-white text-tuhura-green hover:bg-white/90"
				>
					Contact Support
				</a>
			</div>
		</section>
	</main>
</Layout>
