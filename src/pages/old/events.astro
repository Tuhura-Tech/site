---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Mahi | Tūhura Tech">
  <main>
    <!-- Hero Section -->
    <section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1
              class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight"
            >
              Customer <span class="gradient-text">Success</span>
            </h1>
            <p class="mt-6 text-xl text-gray-600 max-w-lg">
              Discover how businesses are transforming their payroll operations
              with our solutions.
            </p>
            <div class="mt-8">
              <a href="#featured-case-study" class="btn btn-primary"
                >View Case Studies</a
              >
            </div>
          </div>
          <div class="">
            <div class="relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-tuhura-green to-tuhura-blue rounded-xl blur opacity-30"
              >
              </div>
              <div
                class="relative bg-white rounded-xl shadow-xl overflow-hidden p-8"
              >
                <div class="space-y-6">
                  <div class="flex items-center gap-4">
                    <div
                      class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
                    >
                      <svg
                        class="w-6 h-6 text-tuhura-green"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M16 8v8m-8-8v8M12 4v16m5-16l1 1v14l-1 1H7l-1-1V5l1-1h10z"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900">Enterprise</h3>
                      <p class="text-gray-600">Large-scale solutions</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-4">
                    <div
                      class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
                    >
                      <svg
                        class="w-6 h-6 text-tuhura-blue"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900">Startups</h3>
                      <p class="text-gray-600">Scaling solutions</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-4">
                    <div
                      class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
                    >
                      <svg
                        class="w-6 h-6 text-tuhura-green"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5m4 0h-4"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900">SMBs</h3>
                      <p class="text-gray-600">Right-sized solutions</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Case Study -->
    <section id="featured-case-study" class="section bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
          Featured <span class="gradient-text">Case Study</span>
        </h2>
        <div class="bg-white rounded-xl shadow-xl overflow-hidden">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="p-8 md:p-12">
              <div class="flex items-center gap-4 mb-6">
                <!-- <img
                  src="/partner-logo-1.svg"
                  alt="TechCorp Logo"
                  class="w-12 h-12"
                /> -->
                <h3 class="text-2xl font-bold text-gray-900">
                  TechCorp's Payroll Transformation
                </h3>
              </div>
              <p class="text-gray-600 mb-6">
                Learn how TechCorp streamlined their payroll process, reduced
                processing time by 75%, and achieved 100% compliance across
                multiple jurisdictions.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-center gap-2 text-gray-600">
                  <svg
                    class="w-5 h-5 text-tuhura-green"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  75% reduction in processing time
                </li>
                <li class="flex items-center gap-2 text-gray-600">
                  <svg
                    class="w-5 h-5 text-tuhura-green"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  100% compliance achievement
                </li>
                <li class="flex items-center gap-2 text-gray-600">
                  <svg
                    class="w-5 h-5 text-tuhura-green"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  $200,000 annual cost savings
                </li>
              </ul>
              <a href="/case-studies/techcorp" class="btn btn-primary">
                Read the full story →
              </a>
            </div>
            <div class="relative h-64 md:h-auto">
              <!-- <img
                src="/blog/future-payroll.jpg"
                alt="TechCorp Office"
                class="absolute inset-0 w-full h-full object-cover"
              /> -->
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="section">
      <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
          Success <span class="gradient-text">Stories</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <a href="/case-studies/startup-success" class="group">
            <div class="feature-card">
              <!-- <img
                src="/partner-logo-2.svg"
                alt="StartupCo Logo"
                class="w-12 h-12 mb-4"
              /> -->
              <h3
                class="text-xl font-semibold mb-2 group-hover:text-tuhura-green transition-colors"
              >
                StartupCo's Scaling Story
              </h3>
              <p class="text-gray-600 mb-4">
                How a fast-growing startup managed payroll for their expanding
                team across 5 countries.
              </p>
              <div class="flex items-center gap-2 text-tuhura-green">
                <span>Read more</span>
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <a href="/case-studies/enterprise-evolution" class="group">
            <div class="feature-card">
              <!-- <img
                src="/partner-logo-3.svg"
                alt="Enterprise Inc Logo"
                class="w-12 h-12 mb-4"
              /> -->
              <h3
                class="text-xl font-semibold mb-2 group-hover:text-tuhura-green transition-colors"
              >
                Enterprise Inc's Evolution
              </h3>
              <p class="text-gray-600 mb-4">
                Modernizing legacy systems and achieving seamless payroll
                integration for 10,000+ employees.
              </p>
              <div class="flex items-center gap-2 text-tuhura-green">
                <span>Read more</span>
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <a href="/case-studies/retail-revolution" class="group">
            <div class="feature-card">
              <!-- <img
                src="/partner-logo-4.svg"
                alt="RetailPro Logo"
                class="w-12 h-12 mb-4"
              /> -->
              <h3
                class="text-xl font-semibold mb-2 group-hover:text-tuhura-green transition-colors"
              >
                RetailPro's Revolution
              </h3>
              <p class="text-gray-600 mb-4">
                Simplifying complex payroll calculations for hourly workers
                across 200 retail locations.
              </p>
              <div class="flex items-center gap-2 text-tuhura-green">
                <span>Read more</span>
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Industries Section -->
    <section class="section bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
          Browse by <span class="gradient-text">Industry</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <a
            href="/case-studies/technology"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Technology</h3>
            <p class="text-gray-600">
              Success stories from software companies and tech startups.
            </p>
          </a>

          <a
            href="/case-studies/retail"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Retail</h3>
            <p class="text-gray-600">
              How retail businesses manage complex workforce payroll.
            </p>
          </a>

          <a
            href="/case-studies/healthcare"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Healthcare</h3>
            <p class="text-gray-600">
              Payroll solutions for healthcare organizations.
            </p>
          </a>

          <a
            href="/case-studies/manufacturing"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Manufacturing</h3>
            <p class="text-gray-600">
              Managing payroll for manufacturing workforce.
            </p>
          </a>

          <a
            href="/case-studies/professional-services"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Professional Services</h3>
            <p class="text-gray-600">
              Solutions for consulting and service firms.
            </p>
          </a>

          <a
            href="/case-studies/nonprofit"
            class="feature-card hover:shadow-xl transition-shadow"
          >
            <h3 class="text-lg font-semibold mb-2">Nonprofit</h3>
            <p class="text-gray-600">
              How nonprofits optimize their payroll processes.
            </p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gradient-to-r from-tuhura-green to-tuhura-blue">
      <div class="container-custom text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
          Ready to Transform Your Payroll?
        </h2>
        <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
          Join these successful businesses in revolutionizing your payroll
          operations with Tūhura Tech.
        </p>
        <a
          href="/book-demo"
          class="btn bg-white text-tuhura-green hover:bg-white/90"
        >
          Book a Demo
        </a>
      </div>
    </section>
  </main>
</Layout>
