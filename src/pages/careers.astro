---
import { Image } from "astro:assets";
import teamPhoto from "@assets/team-photo.jpg";
import Layout from "@layouts/Layout.astro";

const careers = [
	{
		name: "Lead Mentor",
		location: "Wellington City",
		description:
			"We are hiring lead mentors across the Wellington Region (Wellington, Hutt and Porirua) to join our team to support and engage youth in technology!",
		pay_band: "$40 / hour",
	},
	{
		name: "Lead Mentor",
		location: "Porirua",
		description:
			"We are hiring lead mentors across the Wellington Region (Wellington, Hutt and Porirua) to join our team to support and engage youth in technology!",
		pay_band: "$40 / hour",
	},
	{
		name: "Lead Mentor",
		location: "Lower Hutt",
		description:
			"We are hiring lead mentors across the Wellington Region (Wellington, Hutt and Porirua) to join our team to support and engage youth in technology!",
		pay_band: "$40 / hour",
	},
	{
		name: "Lead Mentor",
		location: "Upper Hutt",
		description:
			"We are hiring lead mentors across the Wellington Region (Wellington, Hutt and Porirua) to join our team to support and engage youth in technology!",
		pay_band: "$40 / hour",
	},
];
---

<Layout title="Careers">
	<main>
		<!-- Hero Section -->
		<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden">
			<div class="container-custom">
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
				>
					<div>
						<h1
							class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight"
						>
							Join Our <span class="gradient-text">Team</span>
						</h1>
						<p class="mt-6 text-xl text-gray-600 max-w-lg">
							Help us empower rangatahi with technology. We're
							looking for passionate individuals who want to make
							a difference.
						</p>
						<div class="mt-8">
							<a href="#open-positions" class="btn btn-primary"
								>View Open Positions</a
							>
						</div>
					</div>
					<div class="">
						<div class="relative">
							<div
								class="absolute -inset-0.5 bg-gradient-to-r from-tuhura-green to-tuhura-blue rounded-xl blur opacity-30"
							>
							</div>
							<div
								class="relative bg-white rounded-xl shadow-xl overflow-hidden"
							>
								<Image
									src={teamPhoto}
									alt="Our Team"
									class="w-full h-auto"
									width={700}
									height={500}
								/>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Why Join Us Section -->
		<section class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Why Join <span class="gradient-text">Tūhura Tech</span>?
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="feature-card">
						<div
							class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5"
						>
							<svg
								class="w-6 h-6 text-tuhura-green"
								viewBox="0 0 24 24"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M13 10V3L4 14H11V21L20 10H13Z"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
