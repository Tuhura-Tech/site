		<!-- Open Positions Section -->
		<section id="open-positions" class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Open <span class="gradient-text">Positions</span>
				</h2>
				<div class="space-y-6">
					{
						careers.map((role, index) => (
							<div class={` delay-${index + 1} feature-card`}>
								<div class="flex flex-col md:flex-row md:items-center md:justify-between">
									<div>
										<h3 class="text-2xl font-semibold mb-3">
											{role.name} - {role.location}
										</h3>
										<p class="text-gray-600 text-lg mb-4">
											{role.description}
										</p>
										<div class="flex items-center gap-4">
											<span class="bg-purple-100 text-tuhura-green px-4 py-1.5 rounded-full text-sm font-medium">
												Part-time (10 hours)
											</span>
											<span class="bg-blue-100 text-tuhura-blue px-4 py-1.5 rounded-full text-sm font-medium">
												In Person
											</span>
											<span class="bg-blue-100 text-tuhura-blue px-4 py-1.5 rounded-full text-sm font-medium">
												{role.pay_band}
											</span>
										</div>
									</div>
									<a
										href={`/careers/${role.name.toLowerCase().replace(" ", "_")}-${role.location.toLowerCase().replace(" ", "_")}`}
										class="mt-6 md:mt-0 btn btn-primary"
									>
										Learn more →
									</a>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section
			class="section bg-gradient-to-r from-tuhura-green to-tuhura-blue"
		>
			<div class="container-custom text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
					Don't see the right position?
				</h2>
				<p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
					We're always looking for talented individuals to join our
					team. Send us your resume and we'll keep you in mind for
					future opportunities.
				</p>
				<a
					href="mailto:careers@tuhuratech.org.nz"
					class="btn bg-white text-tuhura-green hover:bg-white/90"
				>
					Contact Us
				</a>
			</div>
