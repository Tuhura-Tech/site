						<h3 class="text-2xl font-semibold mb-4">TODO</h3>
						<p class="text-gray-600 text-lg">TODO</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Benefits Section -->
		<section class="section">
			<div class="container-custom">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
					Our <span class="gradient-text">Benefits</span>
				</h2>
				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
				>
					<div class="feature-card">
						<div
							class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5"
						>
							<svg
								class="w-6 h-6 text-tuhura-green"
								viewBox="0 0 24 24"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M12 1V23"
