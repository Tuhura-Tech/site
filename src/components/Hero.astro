---
//import { Image } from 'astro:assets';
//import heroImage from '@assets/hero.jpg';
import pldImage from '@assets/pld.jpg';
import eventImage from '@assets/robocup-2025.jpg';
import techSesssion from '@assets/tutor-teaching.jpg'
import session1Image from '@assets/robots.jpg';
import Slideshow from '@components/ui/Slideshow.astro';
---

<section class="flex items-center bg-gray-50 pt-20 lg:py-32">
	<div class="container-custom relative">
		<div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
			<div>
				<h1 class="text-4xl leading-tight font-bold md:text-5xl lg:text-6xl">
					Engaging <span class="gradient-text">rangatahi</span> through technology
				</h1>
				<p class="mt-6 max-w-lg text-xl text-gray-600">
					Free tech education in schools, libraries, and communities. We bring the gear, mentors,
					and kaupapa.
				</p>
				<div class="mt-8 flex flex-col gap-4 sm:flex-row">
					<a href="/mahi" class="btn btn-primary">Explore our mahi</a>
					<a href="/support-us" class="btn btn-secondary">Partner with us</a>
				</div>
			</div>
			<div class="relative">
					<div
						class="slideshow-container relative h-96 w-full overflow-hidden rounded-xl shadow-2xl"
					>
						<Slideshow
							images={[
								{
									src: techSesssion,
									alt: 'A tutor delivering content during after-school session',
									title: 'Community Tech Sessions',
								},
								{
									src: eventImage,
									alt: 'Rangatahi participating in RoboCup 2025 robotics competition with robots on display',
									title: 'Technology Competitions',
								},
								{
									src: session1Image,
									alt: 'Rangatahi engaged in hands-on learning with computers and technology equipment',
									title: 'Interactive Learning',
								},
								{
									src: pldImage,
									alt: 'Educators participating in professional development workshop for technology education',
									title: 'Kaiako Professional Development',
								},
							]}
						/>
					</div>
				</div>
		</div>
	</div>
</section>
