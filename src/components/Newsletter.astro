<section
  class="py-20 bg-gradient-to-r from-tuhura-green to-tuhura-blue text-white relative overflow-hidden"
>
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden opacity-10">
    <div
      class="absolute -top-40 -left-40 w-80 h-80 bg-white rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-40 -right-20 w-60 h-60 bg-white rounded-full blur-3xl"
      style="animation-delay: 1s;"
    >
    </div>
    <div
      class="absolute -bottom-40 left-1/3 w-80 h-80 bg-white rounded-full blur-3xl"
      style="animation-delay: 2s;"
    >
    </div>
  </div>

  <div class="container-custom relative">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Stay Connected with TÅ«hura Tech</h2>
      <p class="text-xl opacity-90 mb-8 max-w-2xl mx-auto leading-relaxed">
        Get updates on new sessions, events, workshops, and ways to get involved. 
        Plus, be the first to hear about opportunities for rangatahi in your community.
      </p>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 max-w-2xl mx-auto">
        <div class="flex flex-col sm:flex-row items-center gap-4 mb-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="text-left">
            <h3 class="font-semibold text-lg">Monthly Newsletter</h3>
            <p class="text-sm opacity-80">Stories, updates, and opportunities delivered to your inbox</p>
          </div>
        </div>
        <script
          src="https://cdn.jsdelivr.net/ghost/signup-form@~0.2/umd/signup-form.min.js"
          data-label-1="website"
          data-button-color="#6aa469"
          data-button-text-color="#FFFFFF"
          data-site="https://blog.tuhuratech.org.nz/"
          data-locale="en"
          async
          is:inline
          ></script>
      </div>
    </div>
  </div>
</section>
