---
const partners = [
	{
		name: "WellingtonNZ",
		logo: "/partner-wnz.svg",
		href: "https://wellingtonnz.com",
	},
	{
		name: "Bastion Security Group",
		logo: "/partner-bsg.svg",
		href: "https://www.bastionsecurity.co.nz/",
	},
	{
		name: "Hutt City Council",
		logo: "/partner-hcc.svg",
		href: "https://huttcity.govt.nz",
	},
	{
		name: "Spark Foundation",
		logo: "/partner-spark.svg",
		href: "https://www.sparkfoundation.org.nz",
	},
];
---

<section class="py-12">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-6">
        Proudly Supported By
      </h3>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
      {
        partners.map((partner) => (
          <div class="group">
            <a 
              href={partner.href} 
              target="_blank"
              rel="noopener noreferrer"
              class="p-6 rounded-xl bg-gray-50 hover:bg-white border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all duration-300 h-full flex flex-col justify-center items-center text-center"
            >
              <img
                src={partner.logo}
                alt={`${partner.name} logo`}
                class="h-16 w-auto mx-auto mb-4 object-contain filter group-hover:grayscale-0 transition-all duration-300"
              />
              <h4 class="text-sm font-medium text-gray-900 mb-2">{partner.name}</h4>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
