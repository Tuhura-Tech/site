---
interface Props {
	title?: string;
	description?: string;
	columns?: "1" | "2" | "3" | "4";
	gap?: "4" | "6" | "8";
	className?: string;
	containerClass?: string;
	centerContent?: boolean;
}

const {
	title,
	description,
	columns = "3",
	gap = "8",
	className = "",
	containerClass = "",
	centerContent = true,
} = Astro.props;

const gridClasses = {
	"1": "grid-cols-1",
	"2": "grid-cols-1 md:grid-cols-2",
	"3": "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
	"4": "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
};

const gapClasses = {
	"4": "gap-4",
	"6": "gap-6",
	"8": "gap-8",
};
---

<section class={`py-16 ${className}`}>
  <div class={`container-custom ${containerClass}`}>
    {
      (title || description) && (
        <div
          class={`${centerContent ? "text-center" : ""} max-w-4xl ${centerContent ? "mx-auto" : ""} mb-12`}
        >
          {title && (
            <h2 class="mb-4 text-3xl font-bold md:text-4xl">{title}</h2>
          )}
          {description && <p class="text-xl text-gray-600">{description}</p>}
        </div>
      )
    }

    <div class={`grid ${gridClasses[columns]} ${gapClasses[gap]}`}>
      <slot />
    </div>
  </div>
</section>
