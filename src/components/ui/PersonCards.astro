---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Card from "./Card.astro";

interface Person {
	name: string;
	role: string;
	bio: string;
	avatar: ImageMetadata;
	social: Record<string, string>;
}

interface Props {
	people: Person[];
	title?: string;
	description?: string;
	columns?: "2" | "3" | "4";
}

const { people, title, description, columns = "3" } = Astro.props;

const gridCols = {
	"2": "grid-cols-1 md:grid-cols-2",
	"3": "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
	"4": "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
};
---

<section class="py-20">
  <div class="container-custom">
    {
      title && (
        <div class="mx-auto mb-16 max-w-3xl text-center">
          <h2 class="text-3xl font-bold md:text-4xl">{title}</h2>
          {description && (
            <p class="mt-4 text-xl text-gray-600">{description}</p>
          )}
        </div>
      )
    }

    <div class={`grid ${gridCols[columns]} gap-8`}>
      {
        people.map((person, index) => (
          <Card
            variant="hover"
            class="text-center"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="relative inline-block">
              <Image
                src={person.avatar}
                class="mx-auto mb-4 flex h-24 w-24 items-center justify-center rounded-full border-2 border-tuhura-green/20 bg-gray-200 object-cover"
                alt={`A photo of ${person.name}`}
              />
            </div>
            <h3 class="text-xl font-semibold">{person.name}</h3>
            <p class="font-medium text-tuhura-green">{person.role}</p>
            <p class="mt-3 text-sm text-gray-600">{person.bio}</p>
            <div class="mt-4 flex justify-center space-x-3">
              {Object.entries(person.social).map(([, url]) => (
                <a
                  href={url as string}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-tuhura-green"
                >
                  <Icon name="heroicons:link" class="h-5 w-5" />
                </a>
              ))}
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
