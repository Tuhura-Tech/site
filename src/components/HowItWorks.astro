---
import { Icon } from "astro-icon/components";

const steps = [
	{
		title: "Find a Session Near You",
		description:
			"Browse our locations across Wellington, Lower Hutt, Upper Hutt, and Porirua. Sessions run after school hours at schools and community centres.",
		link: "/mahi/sessions",
		icon: "heroicons:map-pin",
	},
	{
		title: "Join Our Community",
		description:
			"Connect with other rangatahi and kaiako on Matrix to share projects, ask questions, and collaborate on ideas.",
		link: "https://matrix.to/#/#home:tuhuratech.org.nz",
		icon: "heroicons:user-group",
	},
	{
		title: "Get Involved Further",
		description:
			"Volunteer with us, contribute to our open source projects, or support our mission to make tech education accessible to all.",
		link: "/support-us",
		icon: "heroicons:heart",
	},
];
---

<section class="py-20 bg-tuhura-gray relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" ></div>
  </div>
  
  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold">How to Get Started</h2>
      <p class="mt-4 text-xl text-gray-600">
        Ready to join our community of young tech explorers? Here's how to get involved with Tūhura Tech.
      </p>
    </div>
    
    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 relative">      
      {steps.map((step, index) => (
        <a 
          class={`bg-white rounded-2xl p-8 shadow-lg border border-gray-100 delay-${index + 2} group hover:shadow-2xl transition-all hover:-translate-y-3 block`} 
          href={step.link}
          target={step.link.startsWith('http') ? '_blank' : undefined}
          rel={step.link.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          <div class="relative">
            <div class="w-20 h-20 bg-tuhura-green rounded-2xl flex items-center justify-center mb-6 transition-transform group-hover:scale-110 shadow-lg">
              <Icon name={step.icon} class="h-10 w-10 text-white" />
            </div>
            <div class="absolute -top-2 -right-2 w-8 h-8 bg-tuhura-green rounded-full flex items-center justify-center text-white font-bold text-sm">
              {index + 1}
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-4 transition-colors group-hover:text-tuhura-green">{step.title}</h3>
          <p class="text-gray-600 leading-relaxed mb-4">{step.description}</p>
          <div class="text-tuhura-green font-medium group-hover:underline">
            Get Started →
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <div class="bg-tuhura-green rounded-xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-4">Questions About Joining?</h3>
        <p class="text-xl mb-6 opacity-90">
          Our friendly team is here to help you find the right session and get started.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn bg-white text-tuhura-green hover:bg-gray-100">
            Contact Us
          </a>
          <a href="/mahi/sessions" class="btn bg-transparent border-2 border-white hover:bg-white/10">
            View All Sessions
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
