---
const steps = [
	{
		title: "Join us on Matrix",
		description: "Connect with other rangatahi across Aotearoa interested in technology and work on projects together.",
    link: "https://matrix.to/#/#home:tuhuratech.org.nz",
    icon: ""
	},
	{
		title: "Explore our Open Source Tools",
		description: "Explore and contribute to the open source projects we are building.",
    link: "https://github.com/Tuhura-Tech/",
    icon: ""
	},
	{
		title: "Volunteer",
		description: "3000+",
    link: "https://matrix.to/#/#home:tuhuratech.org.nz",
    icon: ""
	},
];
---

<section class="py-20 bg-tuhura-gray relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" ></div>
  </div>
  
  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="  text-3xl md:text-4xl font-bold">Get involved</h2>
      <p class="  mt-4 text-xl text-gray-600">
        Join us and get invovled.
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 relative">      
      {steps.map((step, index) => (
        <a 
          class={`bg-white rounded-xl p-8 shadow-lg border border-gray-100  delay-${index + 2} group hover:shadow-xl transition-all  hover:-translate-y-2`} href={step.link}
        >
          {/* <div class="flex items-center justify-center w-12 h-12 rounded-full bg-tuhura-green/10 text-tuhura-green font-semibold transition-all  group-hover:bg-tuhura-green group-hover:text-white group-hover:scale-110">
            {step.number}
          </div> */}
          <h3 class="mt-6 text-xl font-semibold transition-colors  group-hover:text-tuhura-green">{step.title}</h3>
          <p class="mt-3 text-gray-600">{step.description}</p>
          
          <!-- Arrow indicator for next step (visible on mobile) -->
          {index < steps.length - 1 && (
            <div class="flex justify-center mt-4 md:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-tuhura-green" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </div>
          )}
        </a>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <div class=" ">
        <a href="/support-us" class="btn btn-primary group">
          <span class="inline-flex items-center">
            Support Us
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transition-transform  group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>
