---
import { Icon } from "astro-icon/components";
import { coreUrls, footerLinks, socials } from "../data";
---

<footer
  class="mt-auto w-full py-10 px-4 sm:px-6 lg:px-8 mx-auto border-t border-gray-200 dark:border-neutral-700"
>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6 mb-10">
    <div class="col-span-full hidden lg:col-span-1 lg:block">
      <a
        class="flex-none text-xl font-semibold text-primary"
        href="/"
        aria-label="Brand">Tūhura Tech</a
      >
      <div class="text-xs text-zinc-700 mr-4 dark:text-zinc-400">
        Copyright © {new Date().getFullYear()} Tūhura Tech. Content available under
        <a
          href="https://creativecommons.org/licenses/by-sa/4.0/"
          class="hover:text-primary-600 dark:hover:text-primary-400 underline hover:decoration-current transition duration-150 ease-in-out"
          >CC BY-SA 4.0</a
        >, unless stated otherwise.<br /><br />
        Registered Charitable Trust <a
          href="https://www.register.charities.govt.nz/Charity/CC60416"
          class="hover:text-primary-600 dark:hover:text-primary-400 underline hover:decoration-current transition duration-150 ease-in-out"
          >CC60416</a
        >.<br />
      </div>
    </div>
    <div style="min-height: 58px;max-width: 440px;margin: 0 auto;width: 100%"><script is:inline src="https://cdn.jsdelivr.net/ghost/signup-form@~0.2/umd/signup-form.min.js" data-label-1="website" data-button-color="#6aa469" data-button-text-color="#FFFFFF" data-site="https://blog.tuhuratech.org.nz/" data-locale="en" async></script></div>

    {
      footerLinks.map((category) => (
        <div>
          <h4 class="text-xs font-semibold uppercase text-secondary">
            {category.href && <a href={category.href}>{category.title}</a>}
            {!category.href && category.title}
          </h4>

          <div class="mt-3 grid space-y-3 text-sm">
            {category.links.map((link) => (
              <p>
                <a
                  href={link.href}
                  class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-neutral-200"
                >
                  {link.label}
                </a>
              </p>
            ))}
          </div>
        </div>
      ))
    }
  </div>

  <div class="pt-5 mt-5 border-t border-gray-200 dark:border-neutral-700">
    <div class="sm:flex sm:justify-between sm:items-center">
      <div class="flex items-center gap-x-3">
        <div class="space-x-4 text-sm ms-4">
          {
            coreUrls.map((url) => (
              <a
                href={url.href}
                class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-neutral-200"
              >
                {url.label}
              </a>
            ))
          }
        </div>
      </div>

      <div class="space-x-4">
        {
          socials.map((social) => (
            <a
              href={social.href}
              class="inline-block text-gray-500 hover:text-gray-800 dark:text-neutral-500 dark:hover:text-neutral-200"
            >
              <Icon
                name={social.icon}
                class="flex-shrink-0 size-6"
                title={social.label}
              />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
