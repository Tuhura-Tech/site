---
import { Image } from "astro:assets";
import sessionImage from "@assets/session.jpg";
import { Icon } from "astro-icon/components";

const stats = [
	{
		number: "15+",
		label: "Locations across the region",
		icon: "heroicons:map-pin",
	},
	{
		number: "1000+",
		label: "Rangatahi engaged each year",
		icon: "heroicons:user-group",
	},
	{
		number: "3",
		label: "Regions served in Te Whanganui-a-Tara",
		icon: "heroicons:globe-americas",
	},
];

const pillars = [
	{
		title: "Sessions",
		desc: "Weekly community & in-school tech sessions for Years 5–13.",
		href: "/mahi/sessions",
		icon: "heroicons:computer-desktop",
	},
	{
		title: "Workshops",
		desc: "Short, Focused deep dives into specific topics.",
		href: "/mahi/workshops",
		icon: "heroicons:academic-cap",
	},
	{
		title: "Kaiako PLD",
		desc: "Professional learning and support for educators.",
		href: "/mahi/pld",
		icon: "heroicons:users",
	},
	{
		title: "Partner with us",
		desc: "Venues, sponsorships, equipment and community support.",
		href: "/support-us",
		icon: "heroicons:heart",
	},
];
---

<section class="py-14 md:py-20 bg-tuhura-gray">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-stretch">
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <h2 class="text-2xl md:text-3xl font-bold">Our impact</h2>
        <p class="mt-3 text-gray-600">We work directly with rangatahi in schools, libraries and communities — bringing the gear, mentors and kaupapa so cost is never a barrier.</p>
        <div class="mt-6 grid grid-cols-3 gap-4">
          {stats.map((s) => (
            <div class="text-center">
              <div class="mx-auto mb-2 w-10 h-10 rounded-full bg-tuhura-green/10 flex items-center justify-center">
                <Icon name={s.icon} class="w-5 h-5 text-tuhura-green" />
              </div>
              <div class="text-2xl font-bold text-tuhura-green">{s.number}</div>
              <div class="text-xs text-gray-600">{s.label}</div>
            </div>
          ))}
        </div>
        
        <!-- Visual element -->
        <div class="mt-6 relative overflow-hidden rounded-xl">
          <Image
            src={sessionImage}
            alt="Rangatahi learning together in our community sessions"
            class="w-full h-32 object-cover"
            width={300}
            height={128}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
            <div class="absolute bottom-3 left-3 right-3">
              <p class="text-white text-sm font-medium">Community Learning</p>
            </div>
          </div>
        </div>
      </div>
      <div class="lg:col-span-2 bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <h3 class="text-xl font-semibold mb-4">Ways we support communities</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {pillars.map((p) => (
            <a href={p.href} class="group block rounded-xl border border-gray-100 p-6 hover:shadow-md transition-shadow">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-tuhura-green text-white flex items-center justify-center flex-shrink-0">
                  <Icon name={p.icon} class="w-6 h-6" />
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 group-hover:text-tuhura-green">{p.title}</h4>
                  <p class="text-sm text-gray-600 mt-1">{p.desc}</p>
                  <span class="text-sm text-tuhura-green mt-2 inline-block">Learn more →</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
