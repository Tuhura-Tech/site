---
import { Icon } from 'astro-icon/components';

const stats = [
	{
		number: '15+',
		label: 'Locations across the region',
		icon: 'heroicons:map-pin',
	},
	{
		number: '1000+',
		label: 'Rangatahi engaged each year',
		icon: 'heroicons:user-group',
	},
	{
		number: '3',
		label: 'Regions served in Te Whanganui-a-Tara',
		icon: 'heroicons:globe-americas',
	},
];

const pillars = [
	{
		title: 'Sessions',
		desc: 'Weekly community & in-school tech sessions for Years 5–13.',
		href: '/mahi/sessions',
		icon: 'heroicons:computer-desktop',
	},
	{
		title: 'Workshops',
		desc: 'Short, Focused deep dives into specific topics.',
		href: '/mahi/workshops',
		icon: 'heroicons:academic-cap',
	},
	{
		title: 'Kaiako PLD',
		desc: 'Professional learning and support for educators.',
		href: '/mahi/pld',
		icon: 'heroicons:users',
	},
	{
		title: 'Partner with us',
		desc: 'Venues, sponsorships, equipment and community support.',
		href: '/support-us',
		icon: 'heroicons:heart',
	},
];
---

<section class="bg-tuhura-gray py-14 md:py-20">
	<div class="container-custom">
		<div class="grid grid-cols-1 items-stretch gap-8 lg:grid-cols-3">
			<div class="rounded-2xl border border-gray-100 bg-white p-8 shadow-sm">
				<h2 class="text-2xl font-bold md:text-3xl">Our impact</h2>
				<p class="mt-3 text-gray-600">
					We work directly with rangatahi in schools, libraries and communities — bringing the gear,
					mentors and kaupapa so cost is never a barrier.
				</p>
				<div class="mt-6 grid grid-cols-3 gap-4">
					{
						stats.map((s) => (
							<div class="text-center">
								<div class="mx-auto mb-2 flex h-10 w-10 items-center justify-center rounded-full bg-tuhura-green/10">
									<Icon name={s.icon} class="h-5 w-5 text-tuhura-green" />
								</div>
								<div class="text-2xl font-bold text-tuhura-green">{s.number}</div>
								<div class="text-xs text-gray-600">{s.label}</div>
							</div>
						))
					}
				</div>
			</div>
			<div class="rounded-2xl border border-gray-100 bg-white p-8 shadow-sm lg:col-span-2">
				<h3 class="mb-4 text-xl font-semibold">Ways we support communities</h3>
				<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
					{
						pillars.map((p) => (
							<a
								href={p.href}
								class="group block rounded-xl border border-gray-100 p-6 transition-shadow hover:shadow-md"
							>
								<div class="flex items-start gap-4">
									<div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg bg-tuhura-green text-white">
										<Icon name={p.icon} class="h-6 w-6" />
									</div>
									<div>
										<h4 class="font-semibold text-gray-900 group-hover:text-tuhura-green">
											{p.title}
										</h4>
										<p class="mt-1 text-sm text-gray-600">{p.desc}</p>
										<span class="mt-2 inline-block text-sm text-tuhura-green">Learn more →</span>
									</div>
								</div>
							</a>
						))
					}
				</div>
			</div>
		</div>
	</div>
</section>
