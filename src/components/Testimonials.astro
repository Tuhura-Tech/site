---
const testimonials = [{ author: "", role: "", quote: "" }];
---

<section class="relative overflow-hidden bg-white py-20">
  <!-- Subtle background pattern with parallax effect -->
  <div class="parallax absolute inset-0 opacity-5" data-speed="0.15">
    <div class="absolute inset-0 bg-repeat"></div>
  </div>

  <div class="container-custom relative">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold md:text-4xl">Feedback on what we do</h2>
      <p class="mt-4 text-xl text-gray-600">
        See what whanau, tamariki, rangatahi and industry are saying about what
        we do!
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-3">
      {
        testimonials.map((testimonial, index) => (
          <div
            class="testimonial-card group"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <div class="mb-6 flex items-center">
              <div>
                <h4 class="font-semibold transition-colors group-hover:text-tuhura-green">
                  {testimonial.author}
                </h4>
                <p class="text-sm text-gray-600">{testimonial.role}</p>
              </div>
            </div>
            <p class="relative text-gray-700 italic">
              <span class="absolute -top-2 -left-1 text-4xl text-tuhura-green opacity-20 transition-all group-hover:scale-110 group-hover:opacity-40">
                "
              </span>
              {testimonial.quote}
              <span class="absolute -right-1 -bottom-2 text-4xl text-tuhura-green opacity-20 transition-all group-hover:scale-110 group-hover:opacity-40">
                "
              </span>
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
