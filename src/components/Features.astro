---
import { Image } from "astro:assets";
import eventImage from "@assets/robocup-2025.jpg";
import sessionImage from "@assets/session.jpg";
import pldImage from "@assets/pld.jpg";
import { Icon } from "astro-icon/components";

// import featureImage3 from "@assets/feature-3.svg";

const features = [
	{
		title: "Community-Based Sessions",
		description:
			"We bring free tech education directly to rangatahi in their own communities - schools, libraries, community centres, and marae. Each session is tailored to the specific group and their interests.",
		icon: "heroicons:star-solid",
		image: sessionImage,
		href: "/mahi/sessions",
	},
	{
		title: "Workshops & Events",
		description:
			"Intensive hands-on experiences delivered in community spaces. From VEX Robotics competitions to 3D printing workshops, each event is customized to the venue and participants.",
		icon: "heroicons:globe-asia-australia",
		image: eventImage,
		href: "/mahi/workshops",
	},
	{
		title: "Kaiako (Teacher) Support",
		description:
			"Professional development delivered directly to schools and educational communities. We support kaiako with resources, training, and ongoing mentorship in their own teaching environments.",
		icon: "heroicons:academic-cap",
		image: pldImage,
		href: "/mahi/pld",
	},
];
---

<section
  class="py-20 bg-gray-50 relative overflow-hidden"
>
  <!-- Subtle background pattern with parallax effect -->
  <div class="absolute inset-0 opacity-5 parallax" data-speed="0.1">
    <div class="absolute inset-0 bg-repeat"></div>
  </div>

  <div class="container-custom relative">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold">We Come to Your Community</h2>
      <p class="mt-4 text-xl text-gray-600">
        Rather than expecting rangatahi to come to us, we bring technology education directly to 
        communities. Our trained kaiako and industry volunteers deliver sessions in schools, 
        libraries, community centres, and marae - each session uniquely tailored to the rangatahi who attend.
      </p>
      <div class="mt-8 bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-2xl font-bold text-tuhura-green">15+</div>
            <div class="text-sm text-gray-600">Community locations across Wellington region</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-tuhura-green">Tailored</div>
            <div class="text-sm text-gray-600">Each session adapted to participants</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-tuhura-green">Accessible</div>
            <div class="text-sm text-gray-600">We come to your neighborhood</div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-20 grid grid-cols-1 lg:grid-cols-3 gap-8">
      {
        features.map((feature, index) => (
          <a href={feature.href} class="group block">
            <div class={`feature-card delay-${index + 2} bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 h-full flex flex-col`}>
              <div class="h-14 w-14 rounded-xl bg-tuhura-green flex items-center justify-center text-white mb-6 transition-transform group-hover:scale-110">
                <Icon
                  name={feature.icon}
                  class="h-7 w-7 transition-transform group-hover:rotate-12"
                />
              </div>
              <h3 class="text-2xl font-bold mb-4 transition-colors group-hover:text-tuhura-green">
                {feature.title}
              </h3>
              <p class="text-gray-600 leading-relaxed mb-6 flex-grow">{feature.description}</p>
              <div class="hover-zoom rounded-xl overflow-hidden">
                <Image
                  src={feature.image}
                  alt={feature.title}
                  class="w-full h-48 object-cover rounded-xl transition-all duration-500"
                  width={400}
                  height={200}
                />
              </div>
              <div class="mt-4 text-tuhura-green font-medium group-hover:underline">
                Learn More â†’
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
