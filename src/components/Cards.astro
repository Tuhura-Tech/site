---
import { Icon } from "astro-icon/components";

interface Props {
	cards: { title: string; description: string; icon: string; href: string }[];
}
const { cards } = Astro.props;
---

<div class="max-w-5xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-6">
    {
      cards.map((card) => (
        <a
          class="group flex flex-col bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-neutral-900 dark:border-neutral-800"
          href={card.href}
        >
          <div class="p-4 md:p-5">
            <div class="flex">
              <Icon
                name={card.icon}
                class="mt-1 flex-shrink-0 size-5 text-gray-800 dark:text-neutral-200"
                title="Icon"
              />

              <div class="grow ms-5">
                <h3 class="group-hover:text-secondary font-semibold text-gray-800 dark:group-hover:text-neutral-400 dark:text-neutral-200">
                  {card.title}
                </h3>
                <p class="text-sm text-gray-500 dark:text-neutral-500">
                  {card.description}
                </p>
              </div>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</div>
