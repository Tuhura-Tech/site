---
interface Props {
	title: string;
	desc: string[];
	sections: { title: string; description: string; icon: string }[];
}
const { title, desc, sections } = Astro.props;

import { Icon } from "astro-icon/components";
---

<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="max-w-2xl mx-auto">
    <div class="grid gap-12">
      <div>
        <h2 class="text-3xl font-bold lg:text-4xl text-primary">
          {title}
        </h2>
        {
          desc.map((item) => (
            <p class="mt-3 text-gray-800 dark:text-neutral-400">{item}</p>
          ))
        }
      </div>

      <div class="space-y-6 lg:space-y-10">
        {
          sections.map((section) => (
            <div class="flex">
              <Icon
                name={section.icon}
                class="flex-shrink-0 mt-2 size-6 text-gray-800 dark:text-white"
                title="Charity Icon"
              />
              <div class="ms-5 sm:ms-8">
                <h3 class="text-base sm:text-lg font-semibold text-secondary">
                  {section.title}
                </h3>
                <p class="mt-1 text-gray-600 dark:text-neutral-400">
                  {section.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
